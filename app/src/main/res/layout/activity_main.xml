<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chulseokapp.MainActivity">

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="출석화면입니다"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_myPage"
        android:layout_width="275dp"
        android:layout_height="245dp"
        android:layout_marginBottom="220dp"
        android:backgroundTint="#FF9E80"
        android:text="마이페이지"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_calendar"
        android:layout_width="0dp"
        android:layout_height="245dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#B388FF"
        android:text="캘린더"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_myPage"
        app:layout_constraintStart_toStartOf="@+id/btn_myPage"
        app:layout_constraintTop_toBottomOf="@+id/btn_myPage" />
</androidx.constraintlayout.widget.ConstraintLayout>